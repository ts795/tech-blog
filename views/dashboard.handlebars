<div class="container">
    {{#if loggedIn}}
    <div class="row">
        <div class="col-12 col-sm-12 m-2">
            <button class="w-100 btn btn-lg btn-primary m-1" id="new-post-button"
                onclick="location.href='/new-blog-post'">+ New Post</button>
        </div>
    </div>
    {{#each this.posts }}
    <div class="row">
        <div class="card col-12 col-sm-12 m-2">
            <div class="card-body" data-id="{{ id }}">
                <span class="float-start">{{ title }} </span>
                <span class="float-end">{{ dateStringForPost }}</span>
            </div>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>